
LOCAL_PATH := $(call my-dir)

DEBIAN_PACKAGE_NAME := fw-android-$(subst _,-,$(TARGET_PRODUCT))-$(TARGET_BUILD_VARIANT)
DEBIAN_PACKAGE_VERSION := $(PLATFORM_VERSION)-AOSP-$(shell date +%Y.%m.%d.%H.%M)
DEBIAN_PACKAGE_TARGET := $(PRODUCT_OUT)/$(DEBIAN_PACKAGE_NAME).deb

$(DEBIAN_PACKAGE_TARGET): $(BUILT_TARGET_FILES_PACKAGE)
	@echo "Package: $@"
	$(hide) $(LOCAL_PATH)/deb_from_target_files/deb_from_target_files \
		$@ $(DEBIAN_PACKAGE_NAME) $(DEBIAN_PACKAGE_VERSION) \
		$(BUILT_TARGET_FILES_PACKAGE) \
	        $(INSTALLED_BOOTIMAGE_TARGET) $(INSTALLED_RECOVERYIMAGE_TARGET)

.PHONY: all-deb
debianpackage: $(DEBIAN_PACKAGE_TARGET)

